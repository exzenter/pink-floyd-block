{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "pinkfloyd-block/prism-canvas",
    "version": "1.0.1",
    "title": "Pink Floyd Prism Canvas",
    "category": "media",
    "icon": "art",
    "description": "Interactive light refraction canvas block.",
    "supports": {
        "html": false,
        "anchor": true,
        "align": [
            "wide",
            "full"
        ],
        "spacing": {
            "padding": true,
            "margin": true,
            "blockGap": true
        },
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        },
        "layout": {
            "allowSizingOnChildren": true
        }
    },
    "providesContext": {
        "pinkfloyd-block/isInner": true
    },
    "attributes": {
        "prismSize": {
            "type": "number",
            "default": 200
        },
        "prismX": {
            "type": "number",
            "default": 50
        },
        "prismY": {
            "type": "number",
            "default": 50
        },
        "fadeBorder": {
            "type": "number",
            "default": 25
        },
        "grain": {
            "type": "number",
            "default": 0.15
        },
        "refractionIndex": {
            "type": "number",
            "default": 1.44
        },
        "dispersion": {
            "type": "number",
            "default": 0.11
        },
        "rainbowAngle": {
            "type": "number",
            "default": 48
        },
        "beamWidth": {
            "type": "number",
            "default": 13
        },
        "beamExitMinY": {
            "type": "number",
            "default": 0
        },
        "beamExitMaxY": {
            "type": "number",
            "default": 100
        },
        "beamEntryMinY": {
            "type": "number",
            "default": 0
        },
        "beamEntryMaxY": {
            "type": "number",
            "default": 100
        },
        "innerBeamAngle": {
            "type": "number",
            "default": -78
        },
        "bandCount": {
            "type": "number",
            "default": 7
        },
        "rainbowSpread": {
            "type": "number",
            "default": 2.0
        },
        "dampingEnabled": {
            "type": "boolean",
            "default": true
        },
        "dampingFactor": {
            "type": "number",
            "default": 0.30
        },
        "boxedMode": {
            "type": "boolean",
            "default": false
        },
        "aspectRatioEnabled": {
            "type": "boolean",
            "default": false
        },
        "aspectRatio": {
            "type": "string",
            "default": "16:9"
        },
        "boxWidth": {
            "type": "number",
            "default": 900
        },
        "boxWidthUnit": {
            "type": "string",
            "default": "px"
        },
        "boxHeight": {
            "type": "number",
            "default": 600
        },
        "boxHeightUnit": {
            "type": "string",
            "default": "px"
        },
        "minCanvasSize": {
            "type": "number",
            "default": 100
        },
        "boxBorderRadius": {
            "type": "number",
            "default": 12
        },
        "boxShadowEnabled": {
            "type": "boolean",
            "default": true
        },
        "targetFPS": {
            "type": "number",
            "default": 60
        },
        "antiAliasing": {
            "type": "boolean",
            "default": true
        },
        "showFPS": {
            "type": "boolean",
            "default": false
        },
        "domRainbowShapes": {
            "type": "boolean",
            "default": false
        },
        "hideCanvasRainbow": {
            "type": "boolean",
            "default": false
        },
        "domRainbowOpacity": {
            "type": "number",
            "default": 1.0
        },
        "prismColor": {
            "type": "string",
            "default": "rgba(25, 25, 35, 0.95)"
        },
        "prismBorderColor": {
            "type": "string",
            "default": "rgba(255, 255, 255, 0.08)"
        },
        "grainColor": {
            "type": "string",
            "default": "#ffffff"
        },
        "bgColor": {
            "type": "string",
            "default": "#0a0a0c"
        },
        "beamColor": {
            "type": "string",
            "default": "#ffffff"
        }
    },
    "textdomain": "pinkfloyd-block",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js"
}